<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AnnounceApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="colorSurface">@color/colorPrimaryLight</item>
    </style>


    <style name="Theme.SplashActivity" parent="Theme.AnnounceApp">
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <style name="AnnounceApp.TextInputLayout.Authorization"
        parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">?colorAccent</item>
        <item name="hintTextColor">?colorAccent</item>
    </style>

    <style name="AnnounceApp.TextInputEditText.Authorization"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textCursorDrawable">@drawable/color_accent_cursor</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>